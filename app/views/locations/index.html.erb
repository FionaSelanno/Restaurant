<p id="notice"><%= notice %></p>

<h1>Listing Locations</h1>




<!-- If the search doesn't give any results -->
<% if @locations.blank? %>
  <h4>We couldn't find anything containing the term "<%= params[:search] %>".</h4>
<% end %>

<table>
  <thead>
    <tr>
      <th>Restaurant name</th>
      <th>Description</th>
      <th>Seats</th>
      <th>Email</th>
      <th>Phone</th>
      <th> City </th>
      <th> Address </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>

      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="..." alt="...">
          <div class="caption">
            <h3><%= location.restaurant_name %></h3>
            <p><%= location.city%>, <%= location.seats%> seats </p>
            <p><%= link_to 'Show', location, class:"btn btn-default" %><a href="#" class="btn btn-default" role="button">reserve</a></p>
          </div>
        </div>
      </div>




    <% end %>
  </div>



<%= link_to 'New Location', new_location_path %>
