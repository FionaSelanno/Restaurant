<p id="notice"><%= notice %></p>

<h1>Listing Locations</h1>



<table>
  <thead>
    <tr>
      <th>Restaurant name</th>
      <th>Description</th>
      <th>Seats</th>
      <th>Email</th>
      <th>Phone</th>
      <th> City </th>
      <th> Address </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>


    <% @locations.each do |location| %>
    <div class="row">
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="..." alt="...">
          <div class="caption">
            <h3><%= location.restaurant_name %></h3>
            <p><%= location.city%>, <%= location.seats%> seats </p>
            <p><a href="Show" class="btn btn-primary" role="button">Show</a><a href="#" class="btn btn-default" role="button">reserve</a></p>
          </div>
        </div>
      </div>
    </div>


      <tr>
        <td><%= location.restaurant_name %></td>
        <td><%= location.description %></td>
        <td><%= location.seats %></td>
        <td><%= location.email %></td>
        <td><%= location.phone %></td>
        <td><%= location.city %></td>
        <td><%= location.address %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
